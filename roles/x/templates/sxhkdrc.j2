# new term
super + Return
  i3-sensible-terminal

lock + Return
  i3-sensible-terminal

# kill focused window
super + ctrl + q
  kill-or-close

# start window switcher
super + t
  float window-switch

# Lock screen
super + ctrl + l
  blurlock

# Music menu
super + ctrl + m
  float music-menu

# Pianobar
super + p
  float pianobar-list-stations

# exit i3 (logs you out of your X session)
super + shift + e
  i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'

#####################
# Movement
#####################

# change focus
super + {h,j,k,l} 
  i3-msg focus {left,down,up,right}

# move focused window
super + shift + {h,j,k,l} 
  i3-msg move {left,down,up,right} 

# switch to workspace
super + {1,2,3,4,5,6,7,8,9} 
  i3-msg workspace {1,2,3,4,5,6,7,8,9}

# Move focused container to workspace
super + ctrl + {1,2,3,4,5,6,7,8,9} 
  i3-msg move container to workspace {1,2,3,4,5,6,7,8,9} 

# Move to workspace with focused container
super + shift + {1,2,3,4,5,6,7,8,9} 
  i3-msg move container to workspace {1,2,3,4,5,6,7,8,9};
  i3-msg workspace {1,2,3,4,5,6,7,8,9}

#navigate workspaces next / previous
super + ctrl + {Left,Right}
  i3-msg workspace {next,prev}

# workspace back and forth (with/without active container)
super + shift + b
  i3-msg move container to workspace back_and_forth
  i3-msg workspace back_and_forth

# toggle tiling / floating
super + shift + space
  i3-msg floating toggle

# change focus between tiling / floating windows
super + space
  i3-msg focus mode_toggle 


