" NB: If you want "vim-like" behaviour where removing a line from
" here makes the setting disappear
sanitise tridactyllocal tridactylsync

" General Settings
set modeindicator false
set editorcmd nvim -c "set noshowmode | set noruler | set laststatus=0 | set noshowcmd | set cmdheight=1 | nnoremap <ENTER> :x<ENTER> | nnoremap <ESC><ESC> :q!<ENTER> | inoremap <ENTER> <ESC>:x!<ENTER>" %f
set theme dark

set searchurls.google   https://encrypted.google.com/search?q=%s
set searchengine google

